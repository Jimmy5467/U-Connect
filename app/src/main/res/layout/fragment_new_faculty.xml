<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".new_faculty"
    android:background="#ffff"
    android:id="@+id/new_fac"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="20dp"
        >

        <TextView
            android:id="@+id/textView5"
            android:layout_width="389dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="department Faculty list"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textSize="20dp"
            app:layout_constraintBottom_toTopOf="@+id/nestedScrollView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.core.widget.NestedScrollView
            android:id="@+id/nestedScrollView"
            android:layout_width="405dp"
            android:layout_height="555dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView5">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="40dp"
                android:paddingRight="40dp">

                <Button
                    android:id="@+id/deps"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginRight="0dp"
                    android:background="#3c40c6"
                    android:text="Depstar"
                    android:elevation="10dp"
                    android:textAllCaps="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:hapticFeedbackEnabled="true"
                    android:textColor="#ffff"
                    android:textSize="20dp"
                    android:textStyle="italic" />

                <Button
                    android:id="@+id/csp"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_below="@id/deps"
                    android:layout_marginTop="15dp"
                    android:background="#575fcf"
                    android:text="Cspit"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:hapticFeedbackEnabled="true"
                    android:textAllCaps="true"
                    android:textColor="#ffff"
                    android:textSize="20dp"
                    android:textStyle="italic" />

                <Button
                    android:id="@+id/pdp"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_below="@id/csp"
                    android:layout_marginTop="15dp"
                    android:background="#0fbcf9"
                    android:text="Pdpias"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:hapticFeedbackEnabled="true"
                    android:textAllCaps="true"
                    android:textColor="#ffff"
                    android:textSize="20dp"
                    android:textStyle="italic" />

                <Button
                    android:id="@+id/cmp"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_below="@id/pdp"
                    android:layout_marginTop="15dp"
                    android:background="#4bcffa"
                    android:text="Cmpica"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:hapticFeedbackEnabled="true"
                    android:textAllCaps="true"
                    android:textColor="#ffff"
                    android:textSize="20dp"
                    android:textStyle="italic" />

                <Button
                    android:id="@+id/rpc"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_below="@id/cmp"
                    android:layout_marginTop="15dp"
                    android:background="#00d8d6"
                    android:text="Rpcp"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:hapticFeedbackEnabled="true"
                    android:textAllCaps="true"
                    android:textColor="#ffff"
                    android:textSize="20dp"
                    android:textStyle="italic" />

                <Button
                    android:id="@+id/cip"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_below="@id/rpc"
                    android:layout_marginTop="15dp"
                    android:background="#34e7e4"
                    android:text="Cips"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:hapticFeedbackEnabled="true"
                    android:textAllCaps="true"
                    android:textColor="#ffff"
                    android:textSize="20dp"
                    android:textStyle="italic" />

                <Button
                    android:id="@+id/ari"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_below="@id/cip"
                    android:layout_marginTop="15dp"
                    android:background="#17c0eb"
                    android:text="arip"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:hapticFeedbackEnabled="true"
                    android:textAllCaps="true"
                    android:textColor="#ffff"
                    android:textSize="20dp"
                    android:textStyle="italic" />

                <Button
                    android:id="@+id/mti"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_below="@id/ari"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="0dp"
                    android:background="#7d5fff"
                    android:text="mtin"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:hapticFeedbackEnabled="true"
                    android:textAllCaps="true"
                    android:textColor="#ffff"
                    android:textSize="20dp"
                    android:textStyle="italic" />

                <Button
                    android:id="@+id/i2i"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_below="@id/mti"
                    android:layout_marginTop="15dp"
                    android:background="#7158e2"
                    android:text="I2im"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:hapticFeedbackEnabled="true"
                    android:textAllCaps="true"
                    android:textColor="#ffff"
                    android:textSize="20dp"
                    android:textStyle="italic" />

            </RelativeLayout>


        </androidx.core.widget.NestedScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>